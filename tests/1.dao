rule "$what is a kind of $type" {
	try {
		a = use.file;
		print("use file "+a);
		with(a) { ref(what) = type; print("OK"); }
	}
	catch err {
		try { ref(what) = type; print("I guess so."); }
		catch err { print(err); }
	}
}

what.is.count = 0;
rule ("what is an $type") {
	unanswered = false;
	try {
		if(what.is.count == 0) {
			with(use.file) {
				a = join("", type);
				b = ref(type); b = join("", @b);
				print(a+" is a kind of "+@b);
			}
		}
		what.is.count = what.is.count + 1;
	}
	catch err {
		print("I don't know.");
		print(err);
	}
	print("what-is counter = "+what.is.count);
}
END { what.is.count = 0; }

