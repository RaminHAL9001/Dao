rule "$* is a kind of $*" {
	try {
		a = use.file;
		print("use file "+a);
		with a { ref($1) = $2; print("OK"); }
	}
	catch err {
		try { ref($1) = $2; print("I guess so."); }
		catch err { print(err); }
	}
}

what.is.count = 0;
rule ("what is an $*?") {
	unanswered = false;
	try {
		if(what.is.count == 0) {
			with use.file {
				a = join("", $1);
				b = ref($1); b = join("", @b);
				print(a+" is a kind of "+@b);
			}
		}
		what.is.count = what.is.count + 1;
	}
	catch err {
		print("I don't know.");
		print(err);
	}
	print("what-is counter = "+what.is.count);
}
END { what.is.count = 0; }

