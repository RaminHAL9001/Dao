println("a = ", a);
println("b = ", b);

//: "a[1] = hello
println("a[1] = ", a[1]);

c = a + b;
d = c;

println("----(original list)-----------------------------------");
show(c);


for x in(c) {
	if(Int == typeof(x)) { delete(x); } else { x = list{x, 0}; }
}
println("----(after deletions)-----------------------------------");
show(c);

for x in(c) {
	if(Int == typeof(x)) { x = list{}; } else { x = list{x, 0}; }
}
