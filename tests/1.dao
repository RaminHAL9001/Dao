rule "$? file $*" {
	op = join("", $1);
	a  = join("", $2);
	try {
		if(op=="open" || op=="read")  {
			a = readDB(a);  print("Read file "+a); use.file = a;
		}
		else if(op=="save" || op=="write")  {
			writeDB(a);  print("Save file "+a);
		}
		else if(op=="close") {
			closeDB(a); print("Close file "+a); delete($use.file);
		}
		else if(op=="use")   {
			use.file = a;
		}
		else {
			print("I don't understand what \""+op+" file\" means.");
		}
		if($use.file) { print("Using file "+a); }
		else { print("Please specify which file to use."); }
	}
	catch err { print("ERROR: "+err); }
}

